<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/omm"
    tools:context=".login">

    <androidx.cardview.widget.CardView
        android:layout_width="361dp"
        android:layout_height="505dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="190dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/custom_edittext"
        android:padding="24dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="358dp"
            android:layout_height="491dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            android:padding="24dp">


            <TextView
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/c"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold"
                android:text="LOGIN"
             />

            <EditText
                android:id="@+id/eemail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cos_email"
                android:drawablePadding="8dp"
                android:fontFamily="@font/c"
                android:gravity="fill_vertical"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/email"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/mgg"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cos_email"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:paddingLeft="10dp"
                android:fontFamily="@font/c"
                android:gravity="fill_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/lock_icon"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/costom_button"
                android:backgroundTint="@color/mg"
                android:fontFamily="@font/c"
                android:text="log in "

                android:textStyle="bold"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/costom_button"
                android:backgroundTint="@color/mg"
                android:fontFamily="@font/c"
                android:text="regester"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
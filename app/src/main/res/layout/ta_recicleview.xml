<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_acard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/RView_imgA"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:src="@drawable/uplode_icon2"
            app:shapeAppearanceOverlay="@style/r" />

        <TextView
            android:id="@+id/RView_NameA"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/RView_imgA"
            android:fontFamily="@font/c"
            android:text="place name "
            android:textColor="@color/black"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/RView_IDA"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/RView_NameA"
            android:text="id "
            android:fontFamily="@font/c"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView

            android:id="@+id/RView_LocationA"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RView_NameA"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/RView_imgA"
            android:fontFamily="@font/c"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/RView_informationA"
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:layout_below="@+id/RView_NameA"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:layout_toEndOf="@+id/RView_imgA"
            android:maxLines="0"
            android:text="description "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/RView_instructionA"
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:layout_below="@+id/RView_NameA"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:layout_toEndOf="@+id/RView_imgA"
            android:maxLines="0"
            android:text="instruction "
            android:textSize="20sp" />



        <TextView
            android:id="@+id/RView_priceA"
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:layout_below="@+id/RView_NameA"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:layout_toEndOf="@+id/RView_imgA"
            android:maxLines="0"
            android:text="price "
            android:textSize="20sp" />


        <TextView
            android:id="@+id/RView_dayA"
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:layout_below="@+id/RView_NameA"
            android:layout_marginStart="21dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="24dp"
            android:layout_toEndOf="@+id/RView_imgA"
            android:maxLines="0"
            android:text="day "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/RView_type"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_below="@+id/RView_NameA"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:layout_toEndOf="@+id/RView_imgA"
            android:maxLines="0"
            android:text="type "
            android:textSize="20sp" />




    </RelativeLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ba"
    tools:context=".u_rent_car_booking">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/candal"
            android:text="Booking Ditails "
            android:background="@drawable/heder"
            android:textAlignment="center"
            android:textColor="@color/mggg"
            android:textSize="30sp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:padding="1dp"
                android:text="Booking Type "
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/booking_type"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Rent Cars "
                android:textSize="18dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <TextView
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="Name "
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/B_name"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Name "
                android:textSize="18dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />



        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:weightSum="2"
            >


            <TextView
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="Phone "
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/B_phone"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Phone "
                android:textSize="18dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />



        </LinearLayout>

        <TextView
            android:text="Type of booking  "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            android:layout_gravity="center"
            android:textSize="19dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/B_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/c"
            android:padding="16dp"
            android:text="type of booking"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="Booking ID "
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/B_ID"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Booking ID "
                android:textSize="18dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="Price "
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/B_price"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Price "
                android:textSize="18dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="DAY "
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/B_day"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="DAY "
                android:textSize="18dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="Quantity "
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/B_quantity"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="1"
                android:textSize="18dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="Total price  "
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/B_totalprice"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Total price  "
                android:textSize="18dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />



        </LinearLayout>


        <Button
            android:id="@+id/B_booked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/booked_b"
            android:textStyle="bold"
            android:fontFamily="@font/c"
            android:padding="16dp"
            android:text="book"
            android:textColor="@color/black"
            android:textSize="18dp" />












    </LinearLayout>


</ScrollView>






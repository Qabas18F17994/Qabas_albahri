<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ba"
    tools:context=".users_ditail">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp">




        <ImageView
            android:id="@+id/placed_img"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:src="@drawable/per"
            android:padding="8dp"
            android:layout_marginTop="10dp"
           />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/c"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="ID"
                android:textColor="@color/black"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/U_id"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="ID"
                android:textSize="23dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/c"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="Full Name "
                android:textColor="@color/black"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/U_name"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Full Name "
                android:textSize="23dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/c"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="Phone "
                android:textColor="@color/black"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/U_phone"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Phone "
                android:textSize="23dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/c"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="Email "
                android:textColor="@color/black"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/U_email"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Email "
                android:textSize="23dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/c"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="Password "
                android:textColor="@color/black"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/U_password"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Password "
                android:textSize="23dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/c"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="Gender"
                android:textColor="@color/black"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/U_gender"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Gender"
                android:textSize="23dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/c"
                android:textStyle="bold"
                android:padding="1dp"
                android:text="Type "
                android:textColor="@color/black"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/U_type"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Type "
                android:textSize="23dp"
                android:fontFamily="@font/c"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                />

        </LinearLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Butoon_deleat_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/rred"
            android:src="@drawable/delete_i"

            />






    </LinearLayout>


</ScrollView>






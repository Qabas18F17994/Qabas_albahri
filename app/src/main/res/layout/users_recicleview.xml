<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_user_card"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/RView_imgg"
            android:layout_width="39dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/per"
            app:shapeAppearanceOverlay="@style/r" />

        <TextView

            android:id="@+id/rRView_email"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rRView_Name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/RView_imgg"
            android:fontFamily="@font/c"
            android:text="email"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/rRView_Name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/RView_imgg"
            android:fontFamily="@font/c"
            android:text=" name "
            android:textColor="@color/black"
            android:textSize="19sp" />


        <TextView
            android:id="@+id/rRView_ID"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/rRView_Name"
            android:text="ID "
            android:fontFamily="@font/c"
            android:textColor="@color/black"
            android:textSize="16sp" />




        <TextView
            android:id="@+id/rRView_phone"
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:layout_below="@+id/rRView_Name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:layout_toEndOf="@+id/RView_imgg"
            android:maxLines="0"
            android:text="description "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rRView_password"
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:layout_below="@+id/rRView_Name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:layout_toEndOf="@+id/RView_imgg"
            android:maxLines="0"
            android:text="instruction "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rRView_gender"
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:layout_below="@+id/rRView_Name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:layout_toEndOf="@+id/RView_imgg"
            android:maxLines="0"
            android:text="instruction "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rRView_type"
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:layout_below="@+id/rRView_Name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:layout_toEndOf="@+id/RView_imgg"
            android:maxLines="0"
            android:text="instruction "
            android:textSize="20sp" />




    </RelativeLayout>

</androidx.cardview.widget.CardView>
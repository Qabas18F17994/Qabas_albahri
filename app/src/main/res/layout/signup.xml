<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/ba"
    tools:context=".SignUp">

    <androidx.cardview.widget.CardView
        android:layout_width="374dp"
        android:layout_height="656dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="22dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/custom_edittext"
        android:padding="24dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="656dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            android:padding="26dp">


            <TextView
                android:id="@+id/y"
                android:text="SIGNUP"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/c"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/IDd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="sans-serif-light"
                android:hint=" ID  "
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/mgg"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="@font/c"
                android:hint="Full Name"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/mgg"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emil"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="@font/c"
                android:hint="Email"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/mgg"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="@font/c"

                android:hint="Phone "
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/mgg"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textpassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                android:layout_marginTop="10dp"
                app:counterMaxLength="10"
                app:endIconMode="password_toggle"
                app:endIconTint="#000000"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/lock_icon">

                <EditText
                    android:id="@+id/password2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_edittext"
                    android:fontFamily="@font/c"

                    android:hint="Password "
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:counterEnabled="true"

                    />


            </com.google.android.material.textfield.TextInputLayout>



            <Spinner
                android:id="@+id/type2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_baground"
                android:contentDescription="select_type "
                android:dropDownVerticalOffset="50dp"
                android:ems="10"
                android:popupBackground="@drawable/popup_spanner"

                />

            <Spinner
                android:id="@+id/gender2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_baground"
                android:contentDescription="select_gender"
                android:dropDownVerticalOffset="50dp"
                android:ems="10"
                android:popupBackground="@drawable/popup_spanner"
               />


            <Button
                android:id="@+id/sigin"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/costom_button"
                android:backgroundTint="@color/mg"
                android:fontFamily="@font/c"
                android:freezesText="false"
                android:text="REGESTER "
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>